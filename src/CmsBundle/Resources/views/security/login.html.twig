{% extends 'base.html.twig' %}

{% block body_class 'signin-page' %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="mn-content valign-wrapper">
        <main class="mn-inner container">
            <div class="valign">
                  <div class="row">
                      <div class="col s12 m6 l4 offset-l4 offset-m3">
                          <div class="card white darken-1">
                              <div class="card-content ">
                                  <span class="card-title">{{ 'title.login'|trans }}</span>
                                   <div class="row">
                                       <form class="col s12" action="{{ path('security_login_check') }}" method="post">
                                           <div class="input-field col s12">
                                               <input id="username" name='_username' type="text" value="{{ last_username }}" class="validate">
                                               <label for="email">{{ 'label.username'|trans }}</label>
                                           </div>
                                           <div class="input-field col s12">
                                               <input type="password" id="password" name="_password" type="password" class="validate">
                                               <label for="password">{{ 'label.password'|trans }}</label>
                                           </div>
                                           <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                           <div class="col s12 right-align m-t-sm">
                                               <button type='submit' class="waves-effect waves-light btn teal">{{ 'action.sign_in'|trans }}</button>
                                           </div>
                                       </form>
                                  </div>
                              </div>
                          </div>
                      </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
 